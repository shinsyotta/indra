{
  "name": "@connext/contracts",
  "version": "3.3.1",
  "description": "Smart contracts that power a Counterfactual State Channel platform",
  "license": "ISC",
  "files": [
    "address-book.json",
    "artifacts",
    "dist",
    "src.sol",
    "src.ts"
  ],
  "main": "./dist/src.ts/index.js",
  "bin": {
    "connext-contracts": "./dist/src.ts/cli.js"
  },
  "keywords": [
    "ethereum",
    "counterfactual",
    "state channels",
    "solidity"
  ],
  "scripts": {
    "build": "rm -rf ./dist/* && npm run compile && npm run transpile",
    "compile": "npx buidler compile",
    "lint": "npm run lint-ts && npm run lint-sol",
    "lint-ts": "../../node_modules/.bin/eslint -c '../../.eslintrc.js' --fix 'test/**/*' 'index.ts'",
    "lint-sol": "solium -d .",
    "test": "npx buidler test",
    "transpile": "./node_modules/.bin/tsc -p tsconfig.json"
  },
  "dependencies": {
    "@connext/types": "7.0.0-alpha.14",
    "@connext/utils": "7.0.0-alpha.14",
    "@openzeppelin/contracts": "3.0.2",
    "ethers": "5.0.3",
    "ganache-cli": "6.9.1",
    "yargs": "15.3.1"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "1.3.7",
    "@nomiclabs/buidler-ethers": "2.0.0",
    "@nomiclabs/buidler-waffle": "2.0.0",
    "@types/chai": "4.2.11",
    "@types/chai-subset": "1.3.3",
    "@types/mocha": "7.0.2",
    "@types/node": "14.0.14",
    "@types/sinon-chai": "3.2.4",
    "@types/yargs": "15.0.5",
    "chai": "4.2.0",
    "ethereum-waffle": "3.0.0",
    "ethlint": "1.2.5",
    "event-target-shim": "5.0.1",
    "mocha": "8.0.1",
    "solc": "0.6.9",
    "ts-mocha": "7.0.0",
    "ts-node": "8.10.2",
    "typescript": "3.9.5"
  }
}
